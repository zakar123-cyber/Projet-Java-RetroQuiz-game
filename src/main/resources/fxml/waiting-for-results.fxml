<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.retroquiz.controller.WaitingForResultsController"
      alignment="CENTER" spacing="30" styleClass="background-base"
      stylesheets="@../css/retro-styles.css">

    <padding>
        <Insets top="50.0" right="50.0" bottom="50.0" left="50.0"/>
    </padding>

    <Label text="QUIZ COMPLETED!" styleClass="title-text"/>

    <VBox alignment="CENTER" spacing="20">
        <ProgressIndicator style="-fx-progress-color: #00ffff;" prefWidth="50" prefHeight="50"/>
        <Label text="Waiting for other players to finish..." styleClass="neon-text-cyan" wrapText="true"/>
    </VBox>

    <Label fx:id="statusLabel" text="Checking status..." styleClass="small-text"/>

</VBox>
