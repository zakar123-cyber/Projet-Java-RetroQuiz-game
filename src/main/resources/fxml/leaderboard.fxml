<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane stylesheets="@../css/retro-styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.retroquiz.controller.LeaderboardController"
           styleClass="background-base">

    <!-- Leaderboard Container -->
    <VBox alignment="TOP_CENTER" spacing="30.0" maxWidth="900">
        <padding>
            <Insets top="50.0" right="50.0" bottom="50.0" left="50.0"/>
        </padding>

        <!-- Title -->
        <Label fx:id="titleLabel" text="ðŸ† GLOBAL LEADERBOARD ðŸ†" styleClass="retro-title-small"/>

        <!-- Leaderboard Table -->
        <TableView fx:id="leaderboardTable" prefWidth="800" prefHeight="450"
                   style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-text-fill: white;">
            
            <columns>
                <TableColumn fx:id="rankColumn" text="Rank" prefWidth="80" 
                            style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="300"/>
                <TableColumn fx:id="totalPointsColumn" text="Total Points" prefWidth="150" 
                            style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="gamesPlayedColumn" text="Games" prefWidth="120" 
                            style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="accuracyColumn" text="Accuracy" prefWidth="150" 
                            style="-fx-alignment: CENTER;"/>
            </columns>
        </TableView>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="refreshButton" text="REFRESH" 
                    styleClass="neon-button, cyan"
                    onAction="#handleRefresh"/>
            
            <Button fx:id="backButton" text="BACK TO MENU" 
                    styleClass="neon-button, magenta"
                    onAction="#handleBack"/>
        </HBox>

    </VBox>
</StackPane>
