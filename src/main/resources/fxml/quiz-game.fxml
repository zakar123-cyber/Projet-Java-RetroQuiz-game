<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane stylesheets="@../css/retro-styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.retroquiz.controller.QuizController"
           style="-fx-background-color: black;">

    <!-- Animated Background -->
    <ImageView fx:id="backgroundView" pickOnBounds="true" preserveRatio="false" opacity="0.3" />

    <!-- Main Quiz Container -->
    <VBox alignment="TOP_CENTER" spacing="30.0" maxWidth="900">
        <padding>
            <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
        </padding>

        <!-- Header Section -->
        <HBox alignment="CENTER" spacing="50.0">
            <Label fx:id="questionNumberLabel" text="Question 1 / 10" 
                   style="-fx-text-fill: #00ffff; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label fx:id="scoreLabel" text="Score: 0" 
                   style="-fx-text-fill: #ffff00; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label fx:id="timerLabel" text="Time: 15s" 
                   style="-fx-text-fill: #00ff00; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>

        <!-- Timer Progress Bar -->
        <ProgressBar fx:id="timerProgressBar" progress="1.0" prefWidth="800" prefHeight="15"
                     style="-fx-accent: #00ff00;"/>

        <!-- Question Box -->
        <VBox styleClass="neon-border-box" alignment="CENTER" spacing="30.0" prefWidth="800">
            <padding>
                <Insets top="30.0" bottom="30.0" left="30.0" right="30.0"/>
            </padding>

            <!-- Question Text -->
            <Label fx:id="questionTextLabel" text="Loading question..." wrapText="true"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-text-alignment: center;"
                   maxWidth="740"/>

            <!-- Answer Buttons -->
            <VBox spacing="15.0" alignment="CENTER" prefWidth="740">
                <Button fx:id="optionAButton" text="A: Option A" 
                        styleClass="neon-button, cyan" 
                        onAction="#handleAnswerA"
                        prefWidth="700" prefHeight="50"
                        style="-fx-font-size: 16px; -fx-alignment: center-left; -fx-padding: 10 20;"/>
                
                <Button fx:id="optionBButton" text="B: Option B" 
                        styleClass="neon-button, yellow" 
                        onAction="#handleAnswerB"
                        prefWidth="700" prefHeight="50"
                        style="-fx-font-size: 16px; -fx-alignment: center-left; -fx-padding: 10 20;"/>
                
                <Button fx:id="optionCButton" text="C: Option C" 
                        styleClass="neon-button, magenta" 
                        onAction="#handleAnswerC"
                        prefWidth="700" prefHeight="50"
                        style="-fx-font-size: 16px; -fx-alignment: center-left; -fx-padding: 10 20;"/>
                
                <Button fx:id="optionDButton" text="D: Option D" 
                        styleClass="neon-button, cyan" 
                        onAction="#handleAnswerD"
                        prefWidth="700" prefHeight="50"
                        style="-fx-font-size: 16px; -fx-alignment: center-left; -fx-padding: 10 20;"/>
            </VBox>
        </VBox>

    </VBox>
</StackPane>
