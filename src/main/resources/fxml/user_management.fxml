<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane stylesheets="@../css/retro-styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.retroquiz.controller.UserManagementController"
           styleClass="background-base">

    <VBox alignment="CENTER" spacing="20.0" maxWidth="800" styleClass="dark-panel">
        <padding>
            <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
        </padding>

        <Label text="USER MANAGEMENT" styleClass="retro-title-small" />

        <TableView fx:id="usersTable" prefHeight="400" prefWidth="600" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-text-fill: white;">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="580" />
            </columns>
        </TableView>

        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <Label text="Username:" styleClass="small-text"/>
                <TextField fx:id="usernameField" promptText="Select a user or type new" styleClass="retro-input"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                 <Label text="New Password:" styleClass="small-text"/>
                 <PasswordField fx:id="passwordField" promptText="Leave empty to keep current" styleClass="retro-input"/>
            </HBox>
        </VBox>

        <HBox alignment="CENTER" spacing="15.0">
             <Button text="UPDATE" styleClass="neon-button-small, cyan" onAction="#handleUpdate"/>
             <Button text="DELETE" styleClass="neon-button-small, magenta" onAction="#handleDelete"/>
             <Button text="REFRESH" styleClass="neon-button-small, yellow" onAction="#handleRefresh"/>
        </HBox>

        <Button text="BACK TO DASHBOARD" styleClass="neon-button, yellow" onAction="#handleBack">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>

    </VBox>
</StackPane>
