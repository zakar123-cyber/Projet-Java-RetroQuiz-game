<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane stylesheets="@../css/retro-styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.retroquiz.controller.CreateQuizController"
           style="-fx-background-color: black;">

    <ImageView fx:id="backgroundView" pickOnBounds="true" preserveRatio="false" opacity="0.4" />

    <VBox alignment="CENTER" spacing="20.0" maxWidth="700">
        <padding>
            <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
        </padding>

        <Label text="CREATE NEW QUESTION" styleClass="retro-title-small" />

        <VBox styleClass="neon-border-box" spacing="15.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <!-- Question Text -->
            <VBox spacing="5.0">
                <Label text="Question Text:" styleClass="neon-text-cyan" style="-fx-font-size: 16px;"/>
                <TextArea fx:id="questionField" promptText="Enter your question here..." 
                          prefRowCount="3" wrapText="true" 
                          styleClass="retro-input" style="-fx-text-fill: white; -fx-control-inner-background: black;"/>
            </VBox>

            <!-- Options -->
            <HBox spacing="20.0">
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <TextField fx:id="optionAField" promptText="Option A" styleClass="retro-input"/>
                    <TextField fx:id="optionBField" promptText="Option B" styleClass="retro-input"/>
                </VBox>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <TextField fx:id="optionCField" promptText="Option C" styleClass="retro-input"/>
                    <TextField fx:id="optionDField" promptText="Option D" styleClass="retro-input"/>
                </VBox>
            </HBox>

            <!-- Settings -->
            <HBox spacing="20.0" alignment="CENTER_LEFT">
                <VBox spacing="5.0">
                    <Label text="Correct Answer:" styleClass="neon-text-cyan" style="-fx-font-size: 14px;"/>
                    <ComboBox fx:id="correctOptionBox" promptText="Select" prefWidth="150.0" styleClass="retro-combo-box"/>
                </VBox>
                
                <VBox spacing="5.0">
                    <Label text="Category:" styleClass="neon-text-cyan" style="-fx-font-size: 14px;"/>
                    <TextField fx:id="categoryField" promptText="e.g. Science" styleClass="retro-input"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Difficulty:" styleClass="neon-text-cyan" style="-fx-font-size: 14px;"/>
                    <ComboBox fx:id="difficultyBox" promptText="MEDIUM" prefWidth="150.0" styleClass="retro-combo-box"/>
                </VBox>
            </HBox>

            <!-- Feedback -->
            <Label fx:id="statusLabel" text="" style="-fx-text-fill: #00ffff; -fx-font-size: 14px; -fx-font-weight: bold;"/>

        </VBox>

        <!-- Actions -->
        <HBox spacing="20.0" alignment="CENTER">
            <Button text="BACK" styleClass="neon-button, magenta" onAction="#handleBack"/>
            <Button text="SAVE QUESTION" styleClass="neon-button, cyan" onAction="#handleSave"/>
        </HBox>

    </VBox>
</StackPane>
