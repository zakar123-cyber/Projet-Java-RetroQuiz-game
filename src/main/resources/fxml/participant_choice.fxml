<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<StackPane fx:id="rootPane"
           stylesheets="@../css/retro-styles.css"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.retroquiz.controller.ParticipantChoiceController"
           style="-fx-background-color: black;">

    <VBox alignment="CENTER" spacing="50.0">

        <Label text="HOW DO YOU WANT TO JOIN?" styleClass="retro-title-small" />

        <HBox alignment="CENTER" spacing="80.0">

            <VBox alignment="CENTER" spacing="10.0">
                <Button fx:id="userLoginButton" text="USER LOGIN" styleClass="neon-button, yellow"
                        onAction="#handleUserLogin"/>
                <Label text="Save your score permanently." style="-fx-text-fill: gray; -fx-font-size: 14px;"/>
            </VBox>

            <VBox alignment="CENTER" spacing="10.0">
                <Button fx:id="guestJoinButton" text="JOIN AS GUEST" styleClass="neon-button, cyan"
                        onAction="#handleGuestJoin"/>
                <Label text="Quick access (score tracked for this tournament only)." style="-fx-text-fill: gray; -fx-font-size: 14px;"/>
            </VBox>

            <VBox alignment="CENTER" spacing="10.0">
                <Button fx:id="leaderboardButton" text="VIEW LEADERBOARD" styleClass="neon-button, magenta"
                        onAction="#handleViewLeaderboard"/>
                <Label text="See the top players." style="-fx-text-fill: gray; -fx-font-size: 14px;"/>
            </VBox>

        </HBox>

        <Button fx:id="backButton" text="< BACK TO MENU" styleClass="neon-button-small, magenta"
                onAction="#handleBackToMenu"/>

    </VBox>

</StackPane>
