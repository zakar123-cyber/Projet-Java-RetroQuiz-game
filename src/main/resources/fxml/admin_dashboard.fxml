<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<StackPane stylesheets="@../css/retro-styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.retroquiz.controller.AdminDashboardController"
           style="-fx-background-color: black;">

    <ImageView fx:id="backgroundView" pickOnBounds="true" preserveRatio="false" opacity="0.4" />

    <VBox alignment="CENTER" spacing="35.0" maxWidth="600">
        <padding>
            <Insets top="50.0" right="50.0" bottom="50.0" left="50.0"/>
        </padding>

        <Label fx:id="welcomeLabel" text="ADMIN DASHBOARD" styleClass="retro-title-small" />
        <Label text="Manage Quizzes and View Scores" style="-fx-text-fill: white; -fx-font-size: 18px;" />

        <VBox alignment="CENTER" spacing="15.0">
            <Button text="MANAGE QUESTIONS" styleClass="neon-button, cyan" onAction="#handleManageQuestions"/>
            <Button text="MANAGE USERS" styleClass="neon-button, yellow" onAction="#handleManageUsers"/>

        </VBox>

        <Button text="LOGOUT" styleClass="neon-button, magenta" onAction="#handleLogout">
            <VBox.margin>
                <Insets top="40.0" />
            </VBox.margin>
        </Button>

    </VBox>
</StackPane>
