<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>

<StackPane stylesheets="@../css/retro-styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.retroquiz.controller.MainLobbyController"
           style="-fx-background-color: black;">

    <ImageView fx:id="backgroundView" pickOnBounds="true" preserveRatio="false" opacity="0.4" />

    <VBox alignment="CENTER" spacing="30.0" maxWidth="600">
        <padding>
            <Insets top="50.0" right="50.0" bottom="50.0" left="50.0"/>
        </padding>

        <Label text="MAIN LOBBY" styleClass="retro-title-small" />

        <VBox fx:id="neonBox" styleClass="neon-border-box, neon-dynamic-content" alignment="CENTER" spacing="25.0">
            <padding>
                <Insets top="30.0" bottom="30.0" left="30.0" right="30.0" />
            </padding>

            <!-- Username Display in the Middle -->
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Welcome," styleClass="neon-secondary-text" />
                <Label fx:id="usernameLabel" text="Username" styleClass="retro-title-small" />
            </VBox>

            <!-- Feedback Label -->
            <Label fx:id="feedbackLabel" text="Choose an option below." styleClass="neon-secondary-text" />

            <!-- Main Action Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="hostGameButton" text="HOST GAME" styleClass="neon-button, cyan" 
                        onAction="#handleHostGame" minWidth="200">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="joinGameButton" text="JOIN GAME" styleClass="neon-button, yellow" 
                        onAction="#handleJoinGame" minWidth="200">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
            </HBox>

            <!-- Host Section (shown after hosting a game) -->
            <VBox fx:id="hostSection" alignment="CENTER" spacing="15.0" visible="false" managed="false">
                <Label text="Your Game Session" styleClass="neon-secondary-text" />
                <Label fx:id="sessionCodeLabel" text="SESSION CODE: ------" 
                       styleClass="retro-title-small" 
                       style="-fx-text-fill: #00ffff; -fx-font-size: 42px; -fx-font-weight: bold;" />
                <Label text="Share this code with other players to join your game." 
                       styleClass="neon-secondary-text" />
                <Button fx:id="startHostedGameButton" text="START GAME" 
                        styleClass="neon-button, cyan" 
                        onAction="#handleStartHostedGame">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </VBox>

            <!-- Join Section (shown when joining a game) -->
            <VBox fx:id="joinSection" alignment="CENTER" spacing="15.0" visible="false" managed="false">
                <Label text="Enter Session Code" styleClass="neon-secondary-text" />
                <VBox spacing="5.0" alignment="CENTER" maxWidth="300">
                    <TextField fx:id="joinCodeField" promptText="Enter 6-character code" 
                               styleClass="retro-input" 
                               style="-fx-font-size: 24px; -fx-alignment: center;" />
                </VBox>
                <Button fx:id="confirmJoinButton" text="CONFIRM JOIN" 
                        styleClass="neon-button, yellow" 
                        onAction="#handleConfirmJoin">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
            </VBox>

        </VBox>

        <Button text="BACK TO MENU" styleClass="neon-button, magenta"
                onAction="#handleBackToMenu">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </Button>

    </VBox>
</StackPane>

